<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="api">
  <Description />
  <FaultRules />
  <PreFlow name="PreFlow">
    <Request />
    <Response />
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request />
    <Response />
  </PostFlow>
  <Flows />
  <HTTPProxyConnection>
    <BasePath>/api</BasePath>
    <Properties>
      <Property name="response.streaming.enabled">true</Property>
    </Properties>
    <VirtualHost>default</VirtualHost>
  </HTTPProxyConnection>
  <RouteRule name="mcp-route">
    <Condition>(proxy.pathsuffix MatchesPath "/mcp") or (proxy.pathsuffix MatchesPath "/mcp/**")</Condition>
    <TargetEndpoint>mcp</TargetEndpoint>
  </RouteRule>
  <RouteRule name="api">
    <TargetEndpoint>api</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>
